<h1>Create a Canned Message</h1>
<%= form_for :cannedmessage, :url => { :action => :create } do |c| %>
  
	<p>
    <%= c.label :title %><br>
    <%= c.text_field :title %>
  </p>
	<p>
    <%= c.label :message %><br>
    <%= c.text_area :message %>
  </p>

	<%= c.hidden_field :facebook_id, :value => @user_id  %>
 
 
  <p>
    <%= c.submit %>
  </p>
<% end %>

<%= link_to 'Back', :action => :index %>